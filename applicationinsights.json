{
  "role": {
    "name": "court-case-service",
    "instance": "court-case-service"
  },
  "heartbeat": {
    "intervalSeconds": 15
  },
  "instrumentation": {
    "logging": {
      "level": "DEBUG"
    }
  },
  "selfDiagnostics": {
    "destination": "console"
  },
  "sampling": {
    "overrides": [
      {
        "attributes": [
          {
            "key": "http.url",
            "value": "https?://[^/]+/health.*",
            "matchType": "regexp"
          }
        ],
        "percentage": 10
      },
      {
        "telemetryType": "exception",
        "attributes": [
          {
            "key": "exception.type",
            "value": "java.util.concurrent.CompletionException",
            "matchType": "strict"
          }
        ],
        "percentage": 10
      }
    ]
  }
}